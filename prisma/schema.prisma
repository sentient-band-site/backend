generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Release {
  id        Int     @id @default(autoincrement())
  name      String
  imageName String
  video     String
  desc      String
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("customer")
  createdAt DateTime  @default(now())
}